{
    "name": "laravie/codex-common",
    "description": "Common PHP library for building API Client SDK for PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mior Muhammad Zaki",
            "email": "crynobone@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Laravie\\Codex\\Common\\": "src/Common/",
            "Laravie\\Codex\\Contracts\\": "src/Contracts/",
            "Laravie\\Codex\\Exceptions\\": "src/Exceptions/",
            "Laravie\\Codex\\Testing\\": "src/Testing/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Laravie\\Codex\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.1",
        "guzzlehttp/psr7": "^1.6",
        "http-interop/http-factory-guzzle": "^1.0",
        "php-http/client-common": "^2.0",
        "php-http/client-implementation": "^1.0",
        "php-http/discovery": "^1.7"
    },
    "require-dev": {
        "mockery/mockery": "^1.3.1",
        "php-http/curl-client": "^2.0",
        "phpunit/phpunit": "^7.5 || ^8.4"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.2-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev"
}
